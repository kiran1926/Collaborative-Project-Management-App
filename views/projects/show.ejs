<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
    <%- include("../partials/_navbar.ejs") %>
   

    <div class="container mt-4">
        <h2>Project: <%= project.name %></h2>
        <p><strong>Description:</strong> <%= project.description %></p>
        <p><strong>Owner:</strong> <%= project.owner.name %></p>

        <h3>Team Members</h3>
        <ul>
            <% project.teamMembers.forEach(member => { %>
                <li><%= member.name %> - <%= member.email %></li>
            <% }) %>
        </ul>

        <a href="/users/<%= user._id %>/projects/<%=project._id%>/edit" class="btn btn-secondary">Edit Project</a>

        <a href="/users/<%= user._id %>/projects" class="btn btn-secondary">Back to Projects</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>